@model BTNHOMTKW.Models.SanPham
@{
    ViewBag.Title = "Chỉnh sửa Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">@ViewBag.Title</h2>

    @using (Html.BeginForm("Edit", "AdminSanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        @Html.HiddenFor(model => model.MaSP)
        @Html.HiddenFor(model => model.SKU)
        @Html.HiddenFor(model => model.NgayTao)
        @Html.HiddenFor(model => model.HinhAnhChinh)

        <!-- Tên SP -->
        <div class="mb-3">
            @Html.LabelFor(model => model.TenSP, "Tên SP", new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>

        <!-- Mô tả -->
        <div class="mb-3">
            @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.MoTa, 5, 80, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>

        <!-- Danh mục -->
        <div class="mb-3">
            @Html.LabelFor(model => model.DanhMucTen, "Danh mục", new { @class = "form-label fw-bold" })
            @Html.DropDownList("DanhMucTen", (SelectList)ViewBag.DanhMucTen, "--- Chọn danh mục ---", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.DanhMucTen, "", new { @class = "text-danger" })
        </div>

        <!-- Ảnh đại diện -->
        <div class="mb-3">
            <label class="form-label fw-bold">Ảnh đại diện</label><br />
            <img src="@Url.Content(Model.HinhAnhChinh)" width="100" class="mb-2 border rounded" /> <br />
            <input type="file" name="HinhAnhChinhFile" class="form-control" />
            <small class="text-muted">Upload ảnh mới để thay thế ảnh cũ.</small>
        </div>

        <!-- Giá bán -->
        <div class="mb-3">
            @Html.LabelFor(model => model.GiaBan, "Giá bán", new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
        </div>

        <!-- Tồn kho -->
        <div class="mb-3">
            @Html.LabelFor(model => model.SoLuongTon, "Tồn kho", new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
        </div>

        <!-- Hiển thị -->
        <div class="mb-3 form-check">
            @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "form-check-input" } })
            @Html.LabelFor(model => model.Active, "Hiển thị", new { @class = "form-check-label fw-bold" })
        </div>

        <!-- Nút hành động -->
        <div class="mt-4">
            <input type="submit" value="Lưu thay đổi" class="btn btn-success me-2" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
