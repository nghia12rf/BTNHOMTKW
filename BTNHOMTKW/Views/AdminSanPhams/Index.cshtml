@model IEnumerable<BTNHOMTKW.Models.SanPham>
@{
    ViewBag.Title = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-primary"><i class="fas fa-boxes me-2"></i>@ViewBag.Title</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard")">Dashboard</a></li>
                <li class="breadcrumb-item active">Danh sách sản phẩm</li>
            </ol>
        </nav>
    </div>

    <div>
        <a href="@Url.Action("ThungRac")" class="btn btn-warning btn-lg shadow-sm me-2">
            <i class="fas fa-trash-restore me-2"></i>Thùng rác
        </a>

        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus me-2"></i>Thêm mới
        </a>
    </div>
</div>


<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-gradient-primary text-white py-3">
        <h5 class="mb-0"><i class="fas fa-filter me-2"></i> Bộ lọc tìm kiếm</h5>
    </div>
    <div class="card-body p-4">
        @using (Html.BeginForm("Index", "AdminSanPhams", FormMethod.Get, new { @class = "row g-3 align-items-end" }))
        {
            <div class="col-md-4">
                <label class="form-label small text-muted fw-bold mb-1">Từ khóa</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control form-control-lg" placeholder="Tên sản phẩm, mã SKU..." />
                </div>
            </div>

            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold mb-1">Danh mục</label>
                @Html.DropDownList("searchCategory", (SelectList)ViewBag.CategoryList, "--- Tất cả ---", new { @class = "form-select form-select-lg" })
            </div>

            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold mb-1">Trạng thái</label>
                @Html.DropDownList("searchStatus", (SelectList)ViewBag.StatusList, new { @class = "form-select form-select-lg" })
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-info btn-lg w-100 text-white fw-bold">
                    Lọc dữ liệu
                </button>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-dark"><i class="fas fa-list me-2"></i> Kết quả: <b>@Model.Count()</b> sản phẩm</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light text-uppercase small fw-bold">
                    <tr>
                        <th class="ps-4" style="width: 80px;">Ảnh</th>
                        <th>Thông tin sản phẩm</th>
                        <th class="text-center" style="width: 120px;">Giá bán</th>
                        <th class="text-center" style="width: 100px;">Kho</th>
                        <th class="text-center" style="width: 150px;">Danh mục</th>
                        <th class="text-center" style="width: 120px;">Trạng thái</th>
                        <th class="text-center" style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="text-muted opacity-50">
                                    <i class="fas fa-folder-open fa-4x mb-3"></i>
                                    <p class="h5">Không tìm thấy dữ liệu phù hợp</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="position-relative d-inline-block">
                                        <img src="@Url.Content(item.HinhAnhChinh)"
                                             class="rounded border"
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                             onerror="this.src='@Url.Content("~/Content/images/no-image.png")'" />

                                        @if (item.SoLuongTon < 10)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                                                <span class="visually-hidden">Cảnh báo</span>
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.TenSP</div>
                                    <div class="small text-muted font-monospace"><i class="fas fa-barcode me-1"></i>@item.SKU</div>
                                </td>
                                <td class="text-center">
                                    <span class="fw-bold text-success">@String.Format("{0:N0}", item.GiaBan)</span>
                                </td>
                                <td class="text-center">
                                    @if (item.SoLuongTon < 10)
                                    {
                                        <span class="badge bg-danger">@item.SoLuongTon</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark border">@item.SoLuongTon</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                        @(item.DanhMuc?.TenDM ?? "Chưa phân loại")
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success"><i class="fas fa-check me-1"></i>Hiện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary"><i class="fas fa-eye-slash me-1"></i>Ẩn</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm shadow-sm">

                                        <a href="@Url.Action("Details", new { id = item.MaSP })" class="btn btn-light text-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a href="@Url.Action("Edit", new { id = item.MaSP })" class="btn btn-light text-primary" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @if (item.Active)
                                        {
                                            <a href="@Url.Action("Delete", new { id = item.MaSP })" class="btn btn-light text-danger" title="Xóa" onclick="return confirm('Bạn muốn xóa sản phẩm này?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("KhoiPhuc", new { id = item.MaSP })" class="btn btn-light text-success" title="Khôi phục" onclick="return confirm('Khôi phục lại sản phẩm này?');">
                                                <i class="fas fa-trash-restore"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Styles
{
<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #224abe);
    }

    .table > :not(caption) > * > * {
        vertical-align: middle;
    }

    .btn-group .btn {
        border: 1px solid #e3e6f0;
    }

        .btn-group .btn:hover {
            background-color: #f8f9fc;
        }

    .form-control-lg, .form-select-lg, .btn-lg {
        border-radius: 8px;
        font-size: 0.95rem;
    }
</style>
}