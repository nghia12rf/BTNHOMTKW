@model BTNHOMTKW.Models.SanPham
@{
    ViewBag.Title = "Xác nhận Xóa Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">@ViewBag.Title</h2>

    <h3 class="text-danger mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</h3>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="fw-bold">@Model.TenSP (@Model.MaSP)</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Giá bán</dt>
                <dd class="col-sm-9">@String.Format("{0:N0} VNĐ", Model.GiaBan)</dd>

                <dt class="col-sm-3">Tồn kho</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuongTon)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex gap-2">
            <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
