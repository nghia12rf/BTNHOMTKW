@model BTNHOMTKW.Models.DonHang
@{
    ViewBag.Title = "Chi tiết Đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">@ViewBag.Title: @Model.MaDonHang</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-header fw-bold">Thông tin Khách hàng</div>
                <div class="card-body">
                    <p><strong>Tên khách:</strong> @Model.KhachHang.HoTen</p>
                    <p><strong>Email:</strong> @Model.KhachHang.TaiKhoanEmail</p>
                    <p><strong>Người nhận:</strong> @Model.HoTenNguoiNhan</p>
                    <p><strong>Số điện thoại:</strong> @Model.SDTNguoiNhan</p>
                    <p><strong>Địa chỉ giao:</strong> @Model.DiaChiGiaoHang</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-3">
                <div class="card-header fw-bold">Thông tin Đơn hàng</div>
                <div class="card-body">
                    <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Thanh toán:</strong> @Model.PTThanhToan (@Model.TrangThaiThanhToan)</p>
                    <p><strong>Tổng tiền:</strong> @String.Format("{0:N0} VNĐ", Model.ThanhTien)</p>
                    <hr />
                    <p>
                        <strong>
                            Trạng thái hiện tại:
                            <span class="badge bg-primary">@Model.TrangThai</span>
                        </strong>
                    </p>

                    @using (Html.BeginForm("UpdateStatus", "AdminDonHangs", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("maDonHang", Model.MaDonHang)

                        <div class="mb-3">
                            <label class="form-label fw-bold">Cập nhật trạng thái</label>
                            @Html.DropDownList("trangThai", (SelectList)ViewBag.TrangThaiList, new { @class = "form-select" })
                        </div>
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header fw-bold">Các sản phẩm trong đơn</div>
                <div class="card-body">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Size</th>
                                <th>Màu</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietDonHangs)
                            {
                                <tr>
                                    <td>@item.SanPham.TenSP</td>
                                    <td>@item.TenSize</td>
                                    <td>@item.TenMau</td>
                                    <td>@item.SoLuong</td>
                                    <td>@String.Format("{0:N0}", item.DonGia)</td>
                                    <td>@String.Format("{0:N0}", item.SoLuong * item.DonGia)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
