@model IEnumerable<BTNHOMTKW.Models.KhachHang>
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-primary"><i class="fas fa-users me-2"></i>@ViewBag.Title</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard")">Dashboard</a></li>
                <li class="breadcrumb-item active">Danh sách khách hàng</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body p-3">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
            <input type="text" class="form-control border-start-0" placeholder="Tìm nhanh khách hàng (Demo giao diện)..." disabled>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom py-3">
        <h5 class="mb-0 text-dark"><i class="fas fa-list me-2"></i> Danh sách tài khoản</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light text-uppercase small fw-bold">
                    <tr>
                        <th class="ps-4" style="width: 60px;">#</th>
                        <th>Thông tin cá nhân</th>
                        <th>Liên hệ</th>
                        <th>Ngày sinh</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center fw-bold"
                                     style="width: 40px; height: 40px;">
                                    @item.HoTen.Substring(0, 1).ToUpper()
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.HoTen</div>
                                <div class="small text-muted">Thành viên từ: @item.TaiKhoan.NgayTao.ToString("dd/MM/yyyy")</div>
                            </td>
                            <td>
                                <div><i class="fas fa-envelope me-2 text-muted"></i>@item.TaiKhoan.Email</div>
                                <div class="small"><i class="fas fa-phone me-2 text-muted"></i>@(item.SDT ?? "Chưa cập nhật")</div>
                            </td>
                            <td>
                                @(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "---")
                            </td>
                            <td class="text-center">
                                @if (item.TaiKhoan.TrangThai == 1)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">
                                        <i class="fas fa-check-circle me-1"></i>Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">
                                        <i class="fas fa-ban me-1"></i>Đã khóa
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "AdminKhachHangs")?id=@item.TaiKhoanEmail" class="btn btn-sm btn-light text-info border" title="Xem chi tiết">
                                    <i class="fas fa-address-card"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Styles
{
<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }
</style>
}