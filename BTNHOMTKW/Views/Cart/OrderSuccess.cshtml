@model string
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 text-center">
                <div class="card-body p-5">
                    <!-- Icon thành công -->
                    <div class="mb-4">
                        <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>

                    <!-- Tiêu đề -->
                    <h2 class="text-success fw-bold mb-3">ĐẶT HÀNG THÀNH CÔNG!</h2>
                    <p class="text-muted mb-4">Cảm ơn quý khách đã mua sắm tại cửa hàng của chúng tôi.</p>

                    <!-- Mã đơn hàng -->
                    <div class="alert alert-info rounded-3 px-4 py-3 mb-4">
                        <div class="fw-bold">Mã đơn hàng của bạn:</div>
                        <div class="h4 text-danger mt-2">@Model</div>
                    </div>

                    <!-- Thông báo -->
                    <p class="text-muted mb-4">
                        Nhân viên sẽ sớm liên hệ với bạn để xác nhận đơn hàng.<br />
                        Bạn có thể theo dõi trạng thái đơn hàng trong trang <span class="fw-bold">Tài khoản của tôi</span>.
                    </p>

                    <!-- Nút hành động -->
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary px-4 rounded-pill">
                            <i class="fa fa-home me-2"></i> Về trang chủ
                        </a>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-primary px-4 rounded-pill">
                            <i class="fa fa-shopping-bag me-2"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
