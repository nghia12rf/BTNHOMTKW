@model BTNHOMTKW.Models.ReportViewModel
@{
    ViewBag.Title = "Thống Kê & Báo Cáo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-primary"><i class="fas fa-chart-pie me-2"></i>@ViewBag.Title</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard")">Dashboard</a></li>
                <li class="breadcrumb-item active">Báo cáo chi tiết</li>
            </ol>
        </nav>
    </div>
    <div class="text-muted small">
        <i class="far fa-calendar-alt me-1"></i> Dữ liệu tính đến: @DateTime.Now.ToString("dd/MM/yyyy")
    </div>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-gradient-primary text-white py-3">
        <h5 class="mb-0"><i class="fas fa-filter me-2"></i> Bộ lọc dữ liệu</h5>
    </div>
    <div class="card-body p-4">
        @using (Html.BeginForm("Index", "AdminBaoCao", FormMethod.Get, new { @class = "row g-3 align-items-end", id = "filterForm" }))
        {
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold mb-1">Từ ngày</label>
                @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", type = "date" })
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold mb-1">Đến ngày</label>
                @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", type = "date" })
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted fw-bold mb-1">Loại báo cáo</label>
                <select name="reportType" class="form-select form-select-lg">
                    <option value="daily" @(ViewBag.ReportType == "daily" ? "selected" : "")>Theo ngày</option>
                    <option value="weekly" @(ViewBag.ReportType == "weekly" ? "selected" : "")>Theo tuần</option>
                    <option value="monthly" @(ViewBag.ReportType == "monthly" ? "selected" : "")>Theo tháng</option>
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold">
                    <i class="fas fa-sync-alt me-2"></i> Xem
                </button>
                <button type="button" class="btn btn-success btn-lg w-100 fw-bold" onclick="exportReport('excel')">
                    <i class="fas fa-file-excel me-2"></i> Xuất
                </button>
            </div>
        }
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 h-100 border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-primary fw-bold small mb-1">Doanh thu</div>
                        <div class="h4 mb-0 fw-bold text-dark">@String.Format("{0:N0}", Model.TotalRevenue) <small class="text-muted fs-6">đ</small></div>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 h-100 border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-success fw-bold small mb-1">Đơn hàng</div>
                        <div class="h4 mb-0 fw-bold text-dark">@Model.TotalOrders</div>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 h-100 border-start border-4 border-info">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-info fw-bold small mb-1">Giá trị TB/Đơn</div>
                        <div class="h4 mb-0 fw-bold text-dark">@String.Format("{0:N0}", Model.AverageOrderValue) <small class="text-muted fs-6">đ</small></div>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm border-0 h-100 border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-warning fw-bold small mb-1">Sản phẩm bán</div>
                        <div class="h4 mb-0 fw-bold text-dark">@Model.TotalProductsSold</div>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                        <i class="fas fa-box-open fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-chart-area me-2"></i>Biểu đồ doanh thu</h6>
            </div>
            <div class="card-body">
                <div class="chart-area" style="height: 300px;">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-chart-pie me-2"></i>Tỷ lệ đơn hàng</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2" style="height: 250px;">
                    <canvas id="orderStatusChart"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="me-2"><i class="fas fa-circle text-warning"></i> Chờ xử lý</span>
                    <span class="me-2"><i class="fas fa-circle text-success"></i> Hoàn thành</span>
                    <span class="me-2"><i class="fas fa-circle text-danger"></i> Hủy</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-dark"><i class="fas fa-crown text-warning me-2"></i>Top Sản Phẩm Bán Chạy</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th>Danh mục</th>
                                <th class="text-center">SL Bán</th>
                                <th class="text-end pe-4">Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TopProducts != null && Model.TopProducts.Any())
                            {
                                foreach (var product in Model.TopProducts)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold text-dark">@product.ProductName</td>
                                        <td><span class="badge bg-light text-dark border">@product.Category</span></td>
                                        <td class="text-center">@product.QuantitySold</td>
                                        <td class="text-end pe-4 text-success fw-bold">@String.Format("{0:N0}", product.Revenue)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-center py-3 text-muted">Chưa có dữ liệu</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 font-weight-bold text-dark"><i class="fas fa-layer-group text-info me-2"></i>Thống Kê Theo Danh Mục</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Danh mục</th>
                                <th class="text-center">Số SP</th>
                                <th class="text-center">SL Bán</th>
                                <th class="text-end pe-4">Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CategoryStatistics != null && Model.CategoryStatistics.Any())
                            {
                                foreach (var cat in Model.CategoryStatistics)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">@cat.CategoryName</td>
                                        <td class="text-center">@cat.ProductCount</td>
                                        <td class="text-center">@cat.QuantitySold</td>
                                        <td class="text-end pe-4 text-primary fw-bold">@String.Format("{0:N0}", cat.Revenue)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-center py-3 text-muted">Chưa có dữ liệu</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            initializeCharts();
        });

        function exportReport(format) {
            const fromDate = document.getElementById('FromDate').value;
            const toDate = document.getElementById('ToDate').value;
            const reportType = document.querySelector('select[name="reportType"]').value;

            window.location.href = '@Url.Action("ExportReport", "AdminBaoCao")'
                + '?fromDate=' + fromDate
                + '&toDate=' + toDate
                + '&reportType=' + reportType
                + '&format=' + format;
        }

        function initializeCharts() {
            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            const gradient = revenueCtx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(67, 97, 238, 0.3)');
            gradient.addColorStop(1, 'rgba(67, 97, 238, 0.0)');

            new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Encode(Model.Labels)),
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: @Html.Raw(Json.Encode(Model.Revenues)),
                        borderColor: '#4361ee',
                        backgroundColor: gradient,
                        borderWidth: 2,
                        pointBackgroundColor: '#4361ee',
                        pointBorderColor: '#fff',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2, 2] },
                            ticks: {
                                callback: function(value) { return value.toLocaleString() + ' đ'; }
                            }
                        },
                        x: { grid: { display: false } }
                    }
                }
            });

            // Order Status Chart
            const statusCtx = document.getElementById('orderStatusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Chờ xác nhận', 'Đang xử lý', 'Hoàn thành', 'Đã hủy'],
                    datasets: [{
                        data: [
                            @Model.PendingOrders,
                            @Model.ProcessingOrders,
                            @Model.CompletedOrders,
                            @Model.CancelledOrders
                        ],
                        backgroundColor: ['#ffc107', '#17a2b8', '#28a745', '#dc3545'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true, boxWidth: 8 } }
                    }
                }
            });
        }
    </script>
}

@section Styles
{
    <style>
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df, #224abe);
        }

        .card {
            border-radius: 10px;
        }

        .form-control-lg, .form-select-lg, .btn-lg {
            border-radius: 8px;
            font-size: 0.95rem;
        }
    </style>
}