@model IEnumerable<BTNHOMTKW.Controllers.HomeController.StoreInfo>

@{
    ViewBag.Title = "Hệ thống cửa hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <style>
        .store-list {
            max-height: 500px;
            overflow-y: auto;
            border: 1px solid #ddd;
        }

        .store-item {
            cursor: pointer;
            transition: all 0.3s;
            border-bottom: 1px solid #eee;
        }

            .store-item:hover {
                background-color: #f8f9fa;
            }

            .store-item.active {
                background-color: #e9ecef;
                border-left: 4px solid #333;
            }

        .map-container iframe {
            width: 100%;
            height: 500px;
            border: 0;
        }

        .store-list::-webkit-scrollbar {
            width: 6px;
        }

        .store-list::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 3px;
        }
    </style>
}

<div class="container mt-4 mb-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Hệ thống cửa hàng</li>
        </ol>
    </nav>

    <h3 class="text-uppercase fw-bold mb-4">
        PUREAR CÓ @Model.Count() SHOWROOM TRÊN CẢ NƯỚC
    </h3>

    <div class="row">
        <div class="col-md-4">
            <div class="store-list">
                @foreach (var item in Model)
                {
                    <div class="store-item p-3" data-map="@item.MapEmbedUrl" onclick="changeMap(this)">
                        <h6 class="fw-bold text-uppercase mb-2">@item.TenCuaHang</h6>

                        <p class="mb-1 small text-muted">
                            <i class="fa fa-map-marker-alt me-2 text-dark"></i> @item.DiaChi
                        </p>

                        <p class="mb-1 small text-muted">
                            <i class="fa fa-clock me-2 text-dark"></i> @item.GioMoCua
                        </p>

                        <div class="mt-2">
                            <a href="#" class="text-dark fw-bold small me-3">
                                <i class="fa fa-directions"></i> Chỉ đường
                            </a>
                            <a href="tel:@item.SDT" class="text-dark fw-bold small">
                                <i class="fa fa-phone-alt"></i> @item.SDT
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-8">
            <div class="map-container shadow-sm border">
                <iframe id="googleMap"
                        src="@Model.First().MapEmbedUrl"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Hàm đổi bản đồ khi click vào cửa hàng (JS thuần)
        function changeMap(element) {
            const mapUrl = element.getAttribute('data-map');
            document.getElementById('googleMap').setAttribute('src', mapUrl);

            // Xử lý hiệu ứng Active
            document.querySelectorAll('.store-item').forEach(item => item.classList.remove('active'));
            element.classList.add('active');
        }

        // Mặc định chọn cái đầu tiên khi load trang
        document.addEventListener("DOMContentLoaded", function () {
            const firstItem = document.querySelector('.store-item');
            if (firstItem) firstItem.classList.add('active');
        });
    </script>
}
