@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #fff;
        }

        .login-wrapper {
            padding: 60px 15px;
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        .login-container {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
        }

        .page-title {
            text-align: center;
            font-size: 32px;
            font-weight: 500;
            margin-bottom: 40px;
            color: #000;
            letter-spacing: 0.5px;
        }

        .form-group {
            margin-bottom: 20px;
            width: 100%;
        }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 8px;
            color: #333;
        }

        .form-control {
            display: block;
            width: 100%;
            max-width: 100% !important;
            height: 50px;
            padding: 10px 15px;
            font-size: 14px;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            border: 1px solid #e1e1e1;
            border-radius: 4px;
            transition: border-color 0.15s ease-in-out;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #000;
                outline: 0;
                box-shadow: none;
            }

            .form-control::placeholder {
                color: #aaa;
                font-weight: 400;
            }

        .btn-submit {
            width: 100%;
            background-color: #000;
            color: #fff;
            font-weight: 600;
            padding: 14px 0;
            border: none;
            border-radius: 4px;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

            .btn-submit:hover {
                background-color: #333;
            }


        .forgot-pass {
            display: block;
            margin-bottom: 25px;
            font-size: 14px;
            color: #333;
            text-decoration: none;
        }

            .forgot-pass:hover {
                text-decoration: underline;
            }

        .bottom-link {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #666;
        }

            .bottom-link a {
                color: #000;
                text-decoration: none;
                font-weight: 500;
            }

                .bottom-link a:hover {
                    text-decoration: underline;
                }

        input:-webkit-autofill {
            box-shadow: 0 0 0 30px white inset !important;
            -webkit-text-fill-color: #333 !important;
        }
    </style>
}

<div class="login-wrapper">
    <div class="login-container">
        <h1 class="page-title">Đăng nhập</h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center border-0 bg-light text-danger mb-4">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label">Email *</label>
                <input type="text" name="email" class="form-control" placeholder="Email" required>
            </div>

            <div class="form-group">
                <label class="form-label">Mật khẩu *</label>
                <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required>
            </div>

            <div class="form-group">
                <a href="#" class="forgot-pass">Quên thông tin tài khoản</a>
            </div>

            <button type="submit" class="btn-submit">Đăng nhập</button>
        }

        <div class="bottom-link">
            Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
        </div>
    </div>
</div>
